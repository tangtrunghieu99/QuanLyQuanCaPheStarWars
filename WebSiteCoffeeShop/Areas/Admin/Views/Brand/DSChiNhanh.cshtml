@model PagedList.IPagedList<Model.EF.ChiNhanh>
@using PagedList.Mvc;
@{
    ViewBag.Title = "DSChiNhanh";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<div class="ibox">
    <div class="ibox-head">
        <div class="ibox-title">Danh sách sách</div>
    </div>
    <div class="ibox-body">
        @using (Html.BeginForm("DSChiNhanh", "ChiNhanh", FormMethod.Get))
        {

            <div class="row form-group ">
                <div class="col-lg-12">
                    <div class="col-md-4">
                        <input type="text" name="Tìm kiếm" class="form-control" placeholder="Tìm kiếm ..." />
                        <br />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                        <a type="button" class="btn btn-success" href="/Admin/Brand/ChiNhanh">Thêm mới</a>
                    </div>
                </div>
            </div>

        }
        <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Tên Chi Nhánh</th>
                    @*<th>Mô tả</th>*@
                    <th>Địa chỉ</th>
                    <th>Ảnh</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        @*<td>@item.MoTa</td>*@
                        <td>@item.Address</td>
                        <td><img src="@item.Image" , width="300px" height="200px" /></td>
                        <td>
                            <a href="/Admin/Brand/Edit/@item.ID">Sửa</a>
                            <a href="/Admin/Brand/Delete/@item.ID">Xóa</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.PagedListPager(Model, page => Url.Action("DSChiNhanh", new { page }))
    </div>
</div>


