@model List<WebSiteCoffeeShop.Models.CartItem>
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Index.cshtml";

}


<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css"/>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="~/Scripts/Cart.js"></script>
<link href="~/Assets/Client/Css/Cart.css" rel="stylesheet" />
<!------ Include the above in your HEAD tag ---------->
<script src="https://use.fontawesome.com/c560c025cf.js"></script>
<div class="container">
    @if (Model.Count > 0)
    {
    <div class="card shopping-cart">
        <div class="card-header bg-dark text-light">
            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
            Giỏ hàng 
            <a href="" class="btn btn-outline-info btn-sm pull-right">Tiếp tục mua hàng</a>
            <div class="clearfix"></div>
        </div>
        
        <div class="card-body">
            <!-- PRODUCT -->
            @{
                decimal total = 0;}
            @foreach (var item in Model)
            {
                { total += item.Monan.Price.GetValueOrDefault(0) * item.SoLuong; }
            
            <div class="row">
                <div class="col-12 col-sm-12 col-md-2 text-center">
                    <img class="img-responsive" src="@item.Monan.Image" alt="prewiew" width="120" height="80">
                </div>
                <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
                    <h4 class="product-name"><strong>@item.Monan.Name</strong></h4>
                    @*<h4>
                        <small>@item.Monan.IDCaterogy</small>
                    </h4>*@
                </div>
                <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
                    <div class="col-3 col-sm-3 col-md-6 text-md-right" style="padding-top: 5px">
                        <h6><strong>@item.Monan.Price.GetValueOrDefault(0).ToString("N0") <span class="text-muted">x</span></strong></h6>
                    </div>
                    <div class="col-4 col-sm-4 col-md-4">
                        <div class="quantity">
                            <input type="button" value="+" class="plus">
                            <input type="text"value="@item.SoLuong" title="Qty" class="qty"
                                   size="4" data-id="@item.Monan.ID">
                            <input type="button" value="-" class="minus">
                        </div>
                    </div>
                    <div class="col-3 col-sm-3 col-md-4 text-md-right" style="padding-top: 5px">
                       
                    </div>
                    <div class="col-2 col-sm-2 col-md-2 text-right">
                        <button id="btnDelete" class="btn btn-outline-danger btn-xs btn-delete"  data-id="@item.Monan.ID">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </div>
                </div>
                </div>
               
            
            
        
            <hr>
            }
            </div>
            <!-- END PRODUCT -->
            <!-- PRODUCT -->
            
            <!-- END PRODUCT -->
            <div class="pull-right">
                <button id="btnDeleteAll" class="btn btn-outline-secondary pull-right">
                    Xóa giỏ hàng
                </button>
            </div>
            <div class="pull-right">
                <button id="btnUpdate" class="btn btn-outline-secondary pull-right">
                    Cập nhật giỏ hàng 
                    </button>
            </div>
        <div class="card-footer">
            <div class="coupon col-md-5 col-sm-5 no-padding-left pull-left">
                <div class="row">
                    <div class="col-6">
                        <input type="text" class="form-control" placeholder="cupone code">
                    </div>
                    <div class="col-6">
                        <input type="submit" class="btn btn-default" value="Use cupone">
                    </div>
                </div>
            </div>
            <div class="pull-right" style="margin: 10px">
               <button id="btnPayment" class="btn btn-success pull-right">Thanh Toán</button>
                <div class="pull-right" style="margin: 5px">
                   Thành Tiền: <b>@total.ToString("N0")</b>
                </div>
            </div>
        </div>
    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        <h2>Chưa có sản phẩm nào trong giỏ hàng </h2>
                        <h3><a href="/">Quay trở lại trang chủ </a></h3>
                    </div>
                }
</div>
                


